<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghostWhile"
    tools:context=".ui.main.PersonalSettingsActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="253px"
        android:background="@color/white"/>
    <ImageView
        android:id="@+id/back"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="140px"
        android:scaleType="centerInside"
        android:src="@drawable/fanhui"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167px"
        android:textSize="48px"
        android:textColor="#262626"
        android:text="个人资料设置"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="990px"
        android:layout_marginTop="300px"
        android:background="@drawable/shape_of_settings"
        >
        头像
        <TextView
            android:id="@+id/touxiang"
            android:paddingLeft="100px"
            android:paddingRight="70px"
            android:textColor="#323232"
            android:text="头像"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="37px"
            android:layout_marginTop="65px"
            android:drawableRight="@drawable/gengduo"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon"
            android:layout_width="131px"
            android:layout_height="131px"
            android:layout_marginTop="15px"
            android:layout_marginLeft="830px"
            fresco:placeholderImage="@drawable/touxianggerenziliaoshezhi"
            fresco:roundAsCircle="true"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundingBorderWidth="5px"
            fresco:roundingBorderColor="@color/colorWhite"/>

        <View
            android:layout_width="919px"
            android:layout_height="1px"
            android:background="#CDCDCD"
            android:layout_marginTop="161px"
            android:layout_centerHorizontal="true"/>
        昵称
        <TextView
            android:id="@+id/nicheng"
            android:paddingLeft="100px"
            android:paddingRight="70px"
            android:textColor="#323232"
            android:text="昵称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="37px"
            android:layout_marginTop="226px"
            android:drawableRight="@drawable/gengduo"
            />
        <TextView
            android:id="@+id/nichengshezhi"
            android:textColor="#CDCDCD"
            android:text="未设置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="37px"
            android:layout_marginTop="226px"
            android:layout_marginLeft="859px"

            />

        <View
            android:layout_width="919px"
            android:layout_height="1px"
            android:background="#CDCDCD"
            android:layout_marginTop="322px"
            android:layout_centerHorizontal="true"/>
        性别
        <TextView
            android:id="@+id/sex"
            android:paddingLeft="100px"
            android:paddingRight="70px"
            android:textColor="#323232"
            android:text="性别"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="37px"
            android:layout_marginTop="386px"
            android:drawableRight="@drawable/gengduo"
            />
        <TextView
            android:id="@+id/sexweishezhi"
            android:textColor="#CDCDCD"
            android:text="未设置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="37px"
            android:layout_marginTop="386px"
            android:layout_marginLeft="859px"

            />

        <View
            android:layout_width="919px"
            android:layout_height="1px"
            android:background="#CDCDCD"
            android:layout_marginTop="481px"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/birthday"
            android:paddingLeft="100px"
            android:paddingRight="70px"
            android:textColor="#323232"
            android:text="生日"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="37px"
            android:layout_marginTop="545px"
            android:drawableRight="@drawable/gengduo"
            />
        <TextView
            android:id="@+id/birthdaynosetting"
            android:textColor="#CDCDCD"
            android:text="1990-01-01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="45px"
            android:layout_marginTop="535px"
            android:layout_marginLeft="757px"

            />

        <View
            android:layout_width="919px"
            android:layout_height="1px"
            android:background="#CDCDCD"
            android:layout_marginTop="640px"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/gerenqianming"
            android:paddingLeft="100px"
            android:textColor="#323232"
            android:text="个性签名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="37px"
            android:layout_marginTop="705px"
            />


    </RelativeLayout>

</RelativeLayout>