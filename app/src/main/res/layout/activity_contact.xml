<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.ContactActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="140px"
        android:scaleType="centerInside"
        android:src="@drawable/fanhui"

        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167px"
        android:textSize="48px"
        android:textStyle="bold"
        android:text="通讯录"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="257px"
        android:background="#DADADA"/>

    <EditText
        android:id="@+id/search_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sosuokuang"
        android:drawableLeft="@drawable/sousuogray"
        android:paddingLeft="40px"
        android:hint="搜索"
        android:textColorHint="#B3B3B3"
        android:drawablePadding="50px"
        android:layout_marginTop="276px"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/search_view"
        android:layout_marginTop="20px"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.pointearning.widget.SideBarView
        android:layout_marginTop="548px"
        android:layout_marginLeft="1002px"
        android:layout_width="wrap_content"
        android:layout_height="1436px"/>





</RelativeLayout>