<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1080px"
    android:layout_height="526px"
    android:background="@drawable/take_picture_shape"
    >

    <TextView
        android:id="@+id/tv_take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44px"
        android:textSize="46px"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="拍摄"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="469px"
        android:layout_marginTop="105px"
        android:textSize="28px"
        android:textColor="#BFBFBF"
        android:layout_centerHorizontal="true"

        android:text="照片或视频"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EBEBEB"
        android:layout_marginTop="177px"
        />

    <TextView
        android:id="@+id/tv_choose_from_phone_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="367px"
        android:layout_marginTop="227px"
        android:textSize="47px"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="从手机相册选择"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#F8F8F8"
        android:layout_marginTop="324px"
        />


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="381px"
        android:textSize="46px"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="取消"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:background="#EBEBEB"
        android:layout_marginTop="481px"
        />




</com.zhy.autolayout.AutoRelativeLayout>