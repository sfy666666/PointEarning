<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/back"
        android:layout_width="25px"
        android:layout_height="45px"
        android:layout_marginLeft="51px"
        android:layout_marginTop="168px"
        android:scaleType="fitXY"
        android:src="@drawable/fanhui"

        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167px"
        android:textSize="48px"
        android:textStyle="bold"
        android:text="通讯录"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="257px"
        android:background="#DADADA"/>

    <LinearLayout
        android:layout_below="@id/view"
        android:id="@+id/ll_top_search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center">

        <EditText
            android:id="@+id/ed_search"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sosuokuang"
            android:drawableLeft="@drawable/sousuogray"
            android:paddingLeft="40px"
            android:hint="搜索"
            android:textColorHint="#B3B3B3"
            android:drawablePadding="50px"
            android:textSize="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

    <com.example.pointearning.contact.ContactRecyclerView
        android:id="@+id/contact_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_top_search"/>

</RelativeLayout>