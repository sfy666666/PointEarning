<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    tools:context=".ui.main.TutorDetailActivity"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    tools:context=".ui.main.TutorDetailActivity"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:src="@drawable/daoshibeijing"
        android:layout_height="849px"/>



    <ImageView
        android:id="@+id/back"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="140px"
        android:scaleType="centerInside"
        android:src="@drawable/fanhui1"

        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167px"
        android:textSize="48px"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="详情"/>

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="970px"
        android:layout_marginTop="140px"
        android:scaleType="centerInside"
        android:src="@drawable/gengduowhite"

        />

        <View
            android:layout_width="983px"
            android:layout_height="800px"
            android:layout_marginLeft="48px"
            android:layout_marginTop="393px"
            android:background="@drawable/white_little_circle_shape" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="204px"
            android:layout_height="204px"
            android:layout_marginLeft="78px"
            android:layout_marginTop="300px"
            fresco:placeholderImage="@drawable/gg"
            fresco:roundAsCircle="true"
            fresco:placeholderImageScaleType="fitXY"
            fresco:roundingBorderWidth="5px"
            fresco:roundingBorderColor="@color/colorWhite"
            />

    <Button
        android:layout_width="209px"
        android:layout_height="77px"
        android:layout_marginLeft="763px"
        android:layout_marginTop="429px"
        android:background="@drawable/lateral_gradient_shape"
        android:gravity="center"
        android:text="+关注"
        android:textSize="48px"
        android:textColor="@color/colorWhite" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="118px"
        android:layout_marginTop="541px"
        android:text="白雅晴"
        android:textStyle="bold"
        android:textSize="44px"
        />

    <TextView
        android:id="@+id/tv_heat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/redu"
        android:textSize="40px"
        android:textColor="#F79B24"
        android:text="23456"
        android:gravity="center"
        android:drawablePadding="20px"
        android:layout_marginLeft="280px"
        android:layout_marginTop="543px"/>

    <Button
        android:id="@+id/btn_level"
        android:layout_width="173px"
        android:layout_height="57px"
        android:layout_marginLeft="307px"
        android:layout_marginTop="610px"
        android:text="一级导师"
        android:textStyle="bold"
        android:background="@drawable/button_pink_shape"
        android:textColor="#FF504B"
        android:textSize="27px"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btn_tutor_type"
        android:layout_width="173px"
        android:layout_height="57px"
        android:layout_marginLeft="111px"
        android:layout_marginTop="610px"
        android:text="风投分析"
        android:textColor="#FF504B"
        android:background="@drawable/button_pink_shape"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="27px"
        />

    <TextView
        android:id="@+id/tv_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115px"
        android:layout_marginTop="703px"
        android:text="CAD证券分析师、股票操盘高手、有着丰富的经验"
        android:textSize="34px"
        android:textColor="#A5A5A5"
        />

    <TextView
        android:id="@+id/tv_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="113px"
        android:layout_marginTop="784px"
        android:text="关注  356"
        android:textSize="34px"
        android:textColor="#A5A5A5"
        />

    <View
        android:layout_width="3px"
        android:layout_height="35px"
        android:layout_marginLeft="303px"
        android:layout_marginTop="788px"
        android:background="#A5A5A5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="348px"
        android:layout_marginTop="784px"
        android:text="粉丝  123万"
        android:textSize="34px"
        android:textColor="#A5A5A5"/>


        <RelativeLayout
            android:id="@+id/rlt_tab"
            android:layout_marginTop="946px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/tab_introduction"
                android:layout_marginLeft="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_introduction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="50px"
                    android:paddingLeft="50px"
                    android:paddingRight="50px"
                    android:text="介绍"
                    android:textSize="38px"
                    android:textStyle="bold"

                    />
                <ImageView
                    android:layout_below="@id/tv_introduction2"
                    android:id="@+id/iv_tab_introduction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dianjizhuangtai"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_evaluation"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="50px"
                    android:paddingLeft="50px"
                    android:paddingRight="50px"
                    android:text="评价"
                    android:textSize="36px"
                    />
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_tab_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_evaluation"
                    android:src="@drawable/dianjizhuangtai"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab_dynamic"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="50px"
                    android:paddingLeft="50px"
                    android:paddingRight="50px"
                    android:text="动态"
                    android:textSize="36px"
                    />
                <ImageView
                    android:id="@+id/iv_tab_dynamic"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dynamic"
                    android:src="@drawable/dianjizhuangtai"
                    android:visibility="invisible"
                    />

            </RelativeLayout>
        </RelativeLayout>




        <com.example.pointearning.widget.MyViewPager
            android:layout_below="@id/rlt_tab"
            android:background="@color/colorAccent"
            android:id="@+id/view_pager"
            android:layout_width="983px"
            android:layout_marginLeft="48px"
            android:layout_height="10px"/>



    </RelativeLayout>

</ScrollView>


    <com.example.pointearning.widget.AutoCardView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="250px"
        app:cardElevation="10px"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57px"
            android:layout_marginTop="36px"
            android:text="￥0.00"
            android:textSize="44px"
            android:textColor="#FF554B"
            />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="288px"
            android:layout_height="115px"
            android:text="立即咨询"
            android:textSize="40px"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/button_send_shape"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="17px"
            android:layout_marginLeft="745px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="59px"
            android:layout_marginTop="91px"
            android:text="已有1024人咨询"
            android:textSize="38px"
            android:textColor="#A5A5A5"
            />

    </com.example.pointearning.widget.AutoCardView>




</RelativeLayout>